<% if @project.errors.any? %>
  <ul>
    <% @project.errors.full_messages.each do |error_msg| %>
      <li><%= error_msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @project, :html => { :multipart => true } do |f| %>
  <%= f.label :logo %> 
  <%= f.file_field :logo %>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.submit 'Save' %>
<% end %>